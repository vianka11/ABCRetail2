@using ABCRetail2.Models
@model IEnumerable<ProductEntity>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search products..." value="@ViewBag.SearchTerm" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<p>
    <a class="btn btn-success" asp-action="Create">Add Product</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">@ViewBag.Message</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(p.ImageUrl))
                        {
                            <img src="@p.ImageUrl" alt="@p.Name" style="height:60px;width:auto;border-radius:6px;" />
                        }
                    </td>
                    <td>@p.Name</td>
                    <td>@p.Description</td>
                    <td>@p.Price.ToString("C")</td>
                    <td>@p.StockQuantity</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@p.RowKey">Details</a> |
                        <a asp-action="Edit" asp-route-id="@p.RowKey">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@p.RowKey">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
