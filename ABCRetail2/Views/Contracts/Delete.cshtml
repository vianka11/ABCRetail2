@model ContractEntity

@{
    ViewData["Title"] = "Delete Contract";
}

<h2>Delete Contract</h2>

<h3>Are you sure you want to delete this contract?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">File Name</dt>
        <dd class="col-sm-10">@Model.FileName</dd>

        <dt class="col-sm-2">Uploaded On</dt>
        <dd class="col-sm-10">@Model.UploadedOn.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">File</dt>
        <dd class="col-sm-10">
            <a href="@Model.FileUrl" target="_blank">Open Contract</a>
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>