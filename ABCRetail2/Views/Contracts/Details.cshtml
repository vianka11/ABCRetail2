@model ContractEntity

@{
    ViewData["Title"] = "Contract Details";
}

<h2>Contract Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">File Name</dt>
        <dd class="col-sm-10">@Model.FileName</dd>

        <dt class="col-sm-2">Uploaded On</dt>
        <dd class="col-sm-10">@Model.UploadedOn.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">File</dt>
        <dd class="col-sm-10">
            <a href="@Model.FileUrl" target="_blank">Open Contract</a>
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>