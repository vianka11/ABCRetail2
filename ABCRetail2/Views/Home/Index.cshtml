@model IEnumerable<ProductEntity>
@{
    ViewData["Title"] = "Our Products";
}

<!-- Hero Banner -->
<div class="jumbotron text-center bg-light p-5 rounded mb-4">
    <h1 class="display-4">Welcome to ABC Retail!</h1>
    <p class="lead">Discover the latest fashion trends and style your wardrobe today.</p>
</div>


<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm hover-shadow">
                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.RowKey">
                    @if (!string.IsNullOrWhiteSpace(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height:200px; object-fit:cover;" />
                    }
                    else
                    {
                        <img src="~/images/placeholder.png" class="card-img-top" alt="No image" style="height:200px; object-fit:cover;" />
                    }
                </a>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text mb-2">Price: @product.Price.ToString("C")</p>
                    <p class="card-text mb-2">Stock: @product.StockQuantity</p>
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.RowKey" class="btn btn-primary mt-auto">
                        View Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        transition: 0.3s;
    }
</style>